#include <iostream>
#include <math.h>

using namespace std;

int main() {

    double x,y,z,res=0;
  
      scanf("%lf",&x);
      scanf("%lf",&y);
      scanf("%lff",&z);
        
    z=z*z;
    res = x+x * (y+z);    
    res = res/ ((x+M_PI) * (y+M_PI));
    
    printf("%lf\n",res);
    
    return 0;
}
